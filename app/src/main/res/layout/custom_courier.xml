<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/_5sdp">

                    <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/ivOrder"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="ID:MMOO-37846557"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>


                    <ImageView
                    android:id="@+id/ivParcel"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/dummy_courier"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@+id/tvId"/>


                    <TextView
                    android:id="@+id/tvParcelType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/ivParcel"
                    app:layout_constraintTop_toBottomOf="@+id/tvId"
                    android:text="International type"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="bold"
                    />

            <ImageView
                    android:id="@+id/ivPrice"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/price"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toRightOf="@+id/ivParcel"
                    app:layout_constraintTop_toBottomOf="@+id/tvParcelType"/>


            <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/ivPrice"
                    app:layout_constraintTop_toBottomOf="@+id/tvParcelType"
                    android:text="$40.00"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textStyle="normal"
                    />


                     <ImageView
                    android:id="@+id/ivWeight"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:src="@drawable/weight"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toRightOf="@+id/tvPrice"
                    app:layout_constraintTop_toBottomOf="@+id/tvParcelType"/>


                  <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/ivWeight"
                    app:layout_constraintTop_toBottomOf="@+id/tvParcelType"
                    android:text="45 kg"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textStyle="normal"
                    />

                <ImageView
                    android:id="@+id/ivSource"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/delivery_car"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivParcel"/>


                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/ivSource"
                    app:layout_constraintTop_toBottomOf="@+id/ivParcel"
                    android:text="Delhi"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textStyle="normal"
                    />


                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/forward_arrow"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivParcel"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/ivParcel">

                    <ImageView
                        android:id="@+id/ivDest"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/location_gray"
                        android:scaleType="fitXY"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <TextView
                        android:id="@+id/tvDest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Amritsar"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:textStyle="normal"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>








            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>


